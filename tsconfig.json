{
  "compilerOptions": {
      "baseUrl": "src",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "es6",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "lib": ["dom", "es6", "scripthost", "es2016", "es2019"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}