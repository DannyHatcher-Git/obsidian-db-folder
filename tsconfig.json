{
  "compilerOptions": {
      "baseUrl": "src",
      "inlineSources": true,
      "sourceMap": true,
      "module": "ESNext",
      "target": "es6",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "lib": ["dom", "es6", "scripthost", "es2019", "ES2021"],
      "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}